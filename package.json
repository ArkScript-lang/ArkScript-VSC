{
  "name": "arkscript",
  "displayName": "ArkScript",
  "description": "ArkScript programming language syntax highlighting extension",
  "icon": "images/logo.png",
  "version": "0.3.0",
  "publisher": "ArkScript-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArkScript-lang/ArkScript-VSC.git"
  },
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ark",
        "aliases": [
          "ArkScript",
          "arkscript"
        ],
        "extensions": [
          ".ark",
          ".arkscript"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "arkscript",
        "scopeName": "source.ark",
        "path": "./syntaxes/arkscript.tmLanguage.json"
      }
    ]
  }
}
